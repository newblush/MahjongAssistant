.main{
  margin-top: 5px;
  height: 100%
}
.contain{
  background:#fff;
  display: flex;
  flex-direction: column;
  /* border: 2px solid rgb(156, 44, 156); */
  /* margin-left: 10%;
  margin-right: 10%; */
  width: 100%;
  height: 40vh;
   border-bottom: 2px solid #9c2c9c;
}

.header{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  position: relative;
  height: 10vh;
}

.item{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  position: relative;
 padding-left:2px;
  padding-right:2px; 
  background:  #F6F6F6;
  font-size: 14px;
  height: 10vh;
  margin-bottom:7px; 
  font-family: xiaodanchunti;
}
.title{
  font-family: xiaodanchunti;
  margin-top: 10px;
  margin-bottom: 10px;
  text-align: center;
  font-size: 19px;
  height: 5vh;

}

.btn-container{
  display:flex;
  flex-direction: column;
  align-items:center;
  justify-content:center;
  height: 45vh;
}

.btn{
  margin-top: 10px;
  background:#ffffff;
  color:  rgb(156, 44, 156);
  border: 2px solid rgb(156, 44, 156);
  margin: 10px 5px;
  font-size: 20px;
  border-radius: 12px;
  transition-duration: 0.4s;
  width: 70%
}

.btn:active {
  background-color: rgb(156, 44, 156);
  color: white;
}

.top{
  background-color: #cfa6cf
}